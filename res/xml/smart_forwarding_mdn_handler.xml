<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment android:id="@+id/fragment_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.android.settings.sim.smartForwarding.MDNHandlerHeaderFragment"
            android:layout_marginBottom="15dp" />

    <include
            layout="@layout/two_buttons_panel"
            android:id="@+id/control_buttons_panel"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="?android:attr/listPreferredItemPaddingStart"
            android:layout_marginRight="?android:attr/listPreferredItemPaddingEnd"
            android:layout_below="@+id/fragment_settings" />

</RelativeLayout>