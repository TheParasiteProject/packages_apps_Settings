<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="smart_battery_detail"
    android:title="@string/smart_battery_manager_title"
    settings:keywords="@string/keywords_battery_adaptive_preferences">

    <com.android.settingslib.widget.IllustrationPreference
        android:key="auto_awesome_battery"
        settings:lottie_rawRes="@raw/lottie_adaptive_battery"
        settings:searchable="false" />

    <SwitchPreference
        android:key="smart_battery"
        android:summary="@string/smart_battery_summary"
        android:title="@string/smart_battery_title"
        settings:controller="com.android.settings.fuelgauge.SmartBatteryPreferenceController" />

    <SwitchPreference
        android:key="auto_restriction"
        android:summary="@string/battery_auto_restriction_summary"
        android:title="@string/battery_auto_restriction_title"
        settings:controller="com.android.settings.fuelgauge.AutoRestrictionPreferenceController" />

    <Preference
        android:key="restricted_app"
        android:title="@string/restricted_app_title" />

    <Preference
        android:key="high_power_apps"
        android:title="@string/high_power_apps"
        android:summary="@string/high_power_apps_summary">
        <intent android:action="android.settings.IGNORE_BATTERY_OPTIMIZATION_SETTINGS" />
    </Preference>

    <com.android.settings.custom.preference.SystemSettingSwitchPreference
        android:key="arcane_idle_manager"
        android:title="@string/idle_manager_title"
        android:summary="@string/idle_manager_summary"
        android:defaultValue="false" />

    <com.android.settings.custom.preference.GlobalSettingSwitchPreference
        android:key="strict_standby_policy"
        android:title="@string/strict_standby_policy_title"
        android:summary="@string/strict_standby_policy_summary"
        android:defaultValue="false"/>

    <com.android.settings.custom.preference.GlobalSettingSwitchPreference
        android:key="force_background_freezer"
        android:title="@string/force_background_freezer_title"
        android:summary="@string/force_background_freezer_summary"
        settings:controller="com.android.settings.fuelgauge.batterysaver.ForceBackgroundFreezePreferenceController"
        android:defaultValue="false"/>

    <!-- Sensor Block -->
    <Preference
        android:key="sensor_block_settings"
        android:title="@string/sensor_block_title"
        android:summary="@string/sensor_block_summary"
        android:fragment="com.android.settings.custom.battery.SensorBlockSettings"/>

    <Preference
        android:key="wakelock_blocker"
        android:title="@string/wakelock_blocker_title"
        android:summary="@string/wakelock_blocker_summary"
        android:fragment="com.android.settings.custom.battery.WakeLockBlocker" />

    <Preference
        android:key="alarm_blocker"
        android:title="@string/alarm_blocker_title"
        android:summary="@string/alarm_blocker_summary"
        android:fragment="com.android.settings.custom.battery.AlarmBlocker" />

    <SwitchPreference
        android:key="adaptive_charging"
        android:summary="@string/adaptive_charging_description"
        android:title="@string/adaptive_charging"
        settings:controller="com.google.android.settings.fuelgauge.AdaptiveChargingPreferenceController"
        settings:keywords="@string/keywords_adaptive_charging" />

    <com.android.settingslib.widget.FooterPreference
        android:key="smart_battery_detail_footer"
        android:selectable="false"
        android:title="@string/smart_battery_footer"
        settings:searchable="false" />

</PreferenceScreen>
